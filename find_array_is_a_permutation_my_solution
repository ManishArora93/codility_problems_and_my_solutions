def solution(a)
  largest_element = a.max
  smallest_element = a.min
  a.each do |element|
    closest_elements = a.select {|x| (element - x) == 1 || (element - x) == -1 }
    if closest_elements.length < 2 and element != largest_element and element != smallest_element
      return 0
    end
  end
  return 1
end
